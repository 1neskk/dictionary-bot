{
    "extends": "@tsconfig/node16/tsconfig.json",
    "ts-node": {
        "esm": false,
        "transpileOnly": true,
        "files": true,
        "compilerOptions": {
            "outDir": "./dist",
            "typeRoots": [
                "./node_modules/@types",
                "./src/@types"
            ],
            "target": "es5",
            "allowJs": true,
        },
        "include": [
            "./src/**/*"
        ],
        "exclude": [
            "./node_modules/**/*",
        ]
    },
    "compilerOptions": {
        "outDir": "./dist",
